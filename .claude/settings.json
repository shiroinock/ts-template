{
  "permissions": {
    "allow": [
      "Bash(pnpm:*)",
      "Bash(node:*)",
      "Bash(npx:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(mkdir:*)",
      "Bash(ls:*)",
      "Bash(pwd)",
      "Bash(which:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)"
    ],
    "deny": [
      "Bash(git config:*)",
      "Bash(git push --force:*)",
      "Bash(git reset --hard:*)",
      "Bash(brew install:*)",
      "Bash(apt install:*)",
      "Bash(apt-get install:*)",
      "Bash(yum install:*)",
      "Bash(npm install -g:*)",
      "Bash(chmod 777:*)",
      "Bash(chmod -R 777:*)",
      "Bash(chown:*)",
      "Bash(rm -rf:/*)",
      "Bash(rm -rf ~:*)",
      "Bash(dd:*)",
      "Bash(mkfs:*)",
      "Bash(gh repo delete:*)",
      "Bash(sudo:*)",
      "Bash(su:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/scripts/deny-check.sh"
          }
        ]
      }
    ]
  }
}
