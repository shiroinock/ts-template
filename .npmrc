# Security Settings
# Prevent automatic execution of install scripts (防止 supply chain attacks)
ignore-scripts=true

# Supply chain attack mitigation
# Only install packages released at least 1440 minutes (1 day) ago
# This provides time for the community to detect and report malicious packages
minimum-release-age=10120

# Strict dependency management
strict-peer-dependencies=true
auto-install-peers=false

# Save exact versions (no ^ or ~)
save-exact=true

# Ensure lockfile is always generated
lockfile=true

# Use hardlinks for better performance and disk usage
package-import-method=hardlink

# Require lockfile to be up-to-date
frozen-lockfile=true

# Audit
# Run 'pnpm audit' regularly to check for vulnerabilities
